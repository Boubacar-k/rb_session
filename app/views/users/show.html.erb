<h1>Account Details Page</h1>
<div>Name: <%= @user.name %></div>
<div>Email address: <%= @user.email %></div>

<table>
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td id="modify_user"><%= link_to "Edit", edit_user_path(current_user.id)%>|</td>
      <td id="delete_user"> <%= link_to 'Destroy', user_path(current_user.id), method: :delete, data: { confirm: 'Are you sure you want to delete this account?' } %></td>
     
    </tr>
  </tbody>
</table>